baseURL: "https://YOUR-PROJECT.pages.dev/"
title: "My Blog"
theme: "PaperMod"

enableRobotsTXT: true
minify: true
paginate: 10

defaultContentLanguage: en
defaultContentLanguageInSubdir: true

languages:
  en:
    languageName: "English"
    languageCode: "en"
    contentDir: "content/en"
    weight: 1
  bn:
    languageName: "বাংলা"
    languageCode: "bn-BD"
    contentDir: "content/bn"
    weight: 2
    hasCJKLanguage: true

outputs:
  home:
    - HTML
    - RSS
    - JSON

params:
  env: production
  description: "Fast bilingual blog (English + বাংলা)."
  ShowBreadCrumbs: true
  ShowReadingTime: true
  ShowShareButtons: true
